# Django
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=True
ENVIRONMENT=dev
DJANGO_SETTINGS_MODULE=config.settings.dev
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,http://0.0.0.0
DJANGO_TIME_ZONE=Africa/Johannesburg
DJANGO_LOG_LEVEL=INFO
DJANGO_LOG_JSON=0
ENABLE_GIS=false

# Database
DJANGO_DB_ENGINE=django.contrib.gis.db.backends.postgis
DATABASE_URL=
NBMS_DB_NAME=nbms_project_db2
NBMS_TEST_DB_NAME=test_nbms_project_db2
NBMS_DB_USER=nbms_user
NBMS_DB_PASSWORD=replace-me
POSTGRES_USER=postgres
# Postgres superuser password (used by init/reset scripts)
POSTGRES_PASSWORD=replace-me
POSTGRES_DB=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (optional for local dev)
USE_REDIS=0
REDIS_URL=redis://localhost:6379/0

# Rate limiting
RATE_LIMIT_LOGIN=5/300
RATE_LIMIT_PASSWORD_RESET=5/300
RATE_LIMIT_WORKFLOW=10/60
RATE_LIMIT_EXPORTS=20/60
RATE_LIMIT_PUBLIC_API=600/60
RATE_LIMIT_METRICS=30/60

# Metrics
METRICS_TOKEN=replace-me
METRICS_ALLOW_QUERY_TOKEN=0
# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=no-reply@nbms.local

# MinIO / S3
USE_S3=0
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=replace-me
S3_SECRET_KEY=replace-me
S3_BUCKET=nbms-media
S3_REGION=us-east-1
S3_ADDRESSING_STYLE=path

# Evidence uploads
EVIDENCE_MAX_FILE_SIZE=26214400
EVIDENCE_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.csv,.txt

# Exports and readiness
EXPORT_REQUIRE_SECTIONS=false
EXPORT_REQUIRE_READINESS=false

# Production security defaults (used by config.settings.prod)
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_PROXY_SSL_HEADER=
CONTENT_SECURITY_POLICY=
CONTENT_SECURITY_POLICY_REPORT_ONLY=false
SESSION_COOKIE_NAME=nbms_sessionid
SESSION_COOKIE_AGE=43200
SESSION_EXPIRE_AT_BROWSER_CLOSE=false
SESSION_SAVE_EVERY_REQUEST=false

# GeoServer
ENABLE_GEOSERVER=0
GEOSERVER_URL=http://localhost:8080/geoserver
GEOSERVER_USER=admin
GEOSERVER_PASSWORD=replace-me

# BIRDIE integration
BIRDIE_BASE_URL=
BIRDIE_API_TOKEN=
BIRDIE_TIMEOUT_SECONDS=20
BIRDIE_USE_FIXTURE=1

# Optional: Spatial libs on Windows
GDAL_LIBRARY_PATH=C:\\OSGeo4W64\\bin\\gdal311.dll
GEOS_LIBRARY_PATH=C:\\OSGeo4W64\\bin\\geos_c.dll
